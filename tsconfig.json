{
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "include": ["**/*"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "lib": ["DOM", "ES2019"],
    "jsx": "react",
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "skipLibCheck": true,
    "paths": {
      "App/*": ["./app/*"],
      "Config/*": ["./config/*"],
      "Contracts/*": ["./contracts/*"],
      "Database/*": ["./database/*"]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@adonisjs/session",
      "@adonisjs/view",
      "@eidellev/inertia-adonisjs"
    ]
  }
}
